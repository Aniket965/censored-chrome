{
    "name": "censor chrome",
    "version": "1.0",
    "description": "censors pages",
    "content_scripts": [
      {
        "matches": [
          "<all_urls>"
        ],
        "js": ["src/js/content.js"]
      }
    ],
    "background": {
      "scripts": ["src/js/background.js"],
      "persistent": false
    },
    "permissions": ["declarativeContent", "storage"],
    "page_action": {
        "default_popup": "src/view/pop.html"
    },
    "manifest_version": 2
  }